{
  "manifest_version": 3,
  "name": "GestionHorasTrabajo - Importador de Fichajes",
  "version": "1.1.0",
  "description": "Extrae datos de fichajes y los importa directamente a tu aplicaci√≥n",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*",
    "https://example.com/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://127.0.0.1/*",
        "https://example.com/*",
        "<all_urls>"
      ],
      "js": ["importFichajes.js", "content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Haz clic para capturar datos de fichajes"
  },
  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  }
}
